<main class="main">
  <h1>Update User</h1>

  <div class="form-container">
    <form
      class="form user-form"
      spellcheck="false"
      autocomplete="off"
      autocapitalize="off"
    >
      <div class="form-group">
        <label for="username">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="enter an username"
          required
          value="<%= user.username %>"
        />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="enter your email address"
          required
          value="<%= user.email %>"
        />
      </div>

      <div class="form-group">
        <label for="gender">Gender</label>
        <input
          type="text"
          name="gender"
          id="gender"
          placeholder="enter your gender"
          required
          value="<%= user.gender %>"
        />
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <input
          type="text"
          name="status"
          id="status"
          placeholder="enter current status"
          required
          value="<%= user.status %>"
        />
      </div>

      <button type="submit">Update</button>
    </form>
  </div>
</main>
